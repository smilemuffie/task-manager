mat-icon.avatar
  overflow hidden
  width 64px
  height 64px
  border-radius 100%
  margin 12px

.scroll-container
  overflow-y scroll
  height 200px

.img-container
  position relative
  display inline-block

.img-container img
  display block

img-container .after
  position absolute
  top 0px
  left 0
  width 100%
  height 100%
  display none
  color #fff

img-container:hover .after
  color #dddddd
  font-size 48px
  position absolute
  top 50%
  left 50%
  margin -30px 0 0 -19px
  width 45px
  height 50px
  cursor pointer
